        }
      }
    },
    {
      "name": "Dashboard Line Chart",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/dashboard/line-chart?period=month",
          "host": ["{{base_url}}"],
          "path": ["dashboard", "line-chart"],
          "query": [
            {
              "key": "period",
              "value": "month"
            }
          ]
        }
      }
    },
    {
      "name": "Importar JSON",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ventas\": [\n    {\n      \"fecha\": \"2023-10-01\",\n      \"categoria\": \"Producto A\",\n      \"monto\": 100.50,\n      \"descripcion\": \"Venta importada\"\n    }\n  ],\n  \"gastos\": [\n    {\n      \"fecha\": \"2023-10-01\",\n      \"categoria\": \"Oficina\",\n      \"monto\": 50.00,\n      \"descripcion\": \"Gasto importado\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/import-json",
          "host": ["{{base_url}}"],
          "path": ["import-json"]
        }
      }
    }
  ]
}
